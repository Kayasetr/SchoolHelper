<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChemTab">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/CardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Полная таблица Менделеева"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:layout_marginTop="20dp"
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:src="@drawable/img001" />
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Таблица Менделеева старого типа"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:layout_marginTop="20dp"
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:src="@drawable/img002" />

    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/CardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

        <TextView
            android:id="@+id/textview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Таблица Менделеева с картинками"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:layout_marginTop="20dp"
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:src="@drawable/img003" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>